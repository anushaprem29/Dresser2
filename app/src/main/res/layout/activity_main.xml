<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#cd4e6a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.closet.anusha.dresser.MainActivity">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/main_lt"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919">
        <ImageView
            android:id="@+id/bt_home"
            style="bold"
            android:background="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            />
        <ImageView
            android:id="@+id/bt_gallery"
            style="bold"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/gallery_icon"
            android:layout_width="0dp" />
        <ImageView
            android:id="@+id/bt_camera"
            style="bold"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/cam_icon" />
        <ImageView
            android:id="@+id/bt_recents"
            style="bold"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/fav_icon" />
        <ImageView
            android:id="@+id/bt_profile"
            style="bold"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/user_icon"/>
    </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_above="@+id/OutfitConfirmButton1"
     android:orientation="horizontal">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical">

         <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/view_bg"
            android:id="@+id/acc2"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/view_bg"
            android:id="@+id/acc3"
        />

         <ImageView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:background="@drawable/view_bg"
               android:id="@+id/acc1"
           />
     </LinearLayout>
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="1">
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cloth1"
            android:background="@drawable/view_bg"
         />
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:id="@+id/cloth2"
            android:background="@drawable/view_bg"
         />
     </LinearLayout>
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/view_bg"
        android:id="@+id/acc4"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/view_bg"
        android:id="@+id/acc5"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/view_bg"
        android:id="@+id/acc6"
        />
     </LinearLayout>
 </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/OutfitConfirmButton1"
        android:layout_above="@+id/main_lt"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/view_bg"
        android:text="CONFIRM OUTFIT"/>
</RelativeLayout>
