<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.closet.anusha.dresser.LastWorn">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/lastworn_lt"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919">
        <ImageView
            android:id="@+id/bt_home4"
            style="bold"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/home_icon" />
        <ImageView
            android:id="@+id/bt_gallery4"
            style="bold"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/gallery_icon"
            android:layout_width="0dp" />
        <ImageView
            android:id="@+id/bt_camera4"
            style="bold"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/cam_icon" />
        <ImageView
            android:id="@+id/bt_recents4"
            style="bold"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/fav_icon" />

        <ImageView
            android:id="@+id/bt_profile4"
            style="bold"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/user_icon"/>
    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastwornlist"
        android:layout_above="@id/lastworn_lt">
    </ListView>
</RelativeLayout>
